<!-- This is a partial, used as template for form in new.ejs and edit.ejs -->

<div class="form-group mt-4">
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
            
<div class="form-group mt-4">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group mt-4">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control mb-5"><%= article.markdown %></textarea>
</div>

<a href="/articles/blog-posts" class="btn btn-danger">Cancel</a>
<button type="submit" class="btn btn-dark">Save</button>